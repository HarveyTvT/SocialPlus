# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index()
POST        /add                 controllers.Application.addUser()

# Can use default value
GET         /get                 controllers.Application.getUser(user ?= "lizhuoli")
# Can use optional value(which means the either /get-optional?user=lizhuoli or /get-optional will do
GET         /get-optional        controllers.Application.getUserOptional(user ?= null)
# Json POST
POST        /json                controllers.Application.jsonTest()
# AOP Test(delegate Action)
GET         /delegate            controllers.Application.delegateCall()

GET         /asyncRequest        controllers.Application.asyncRequest()

GET         /api/weibo/auth      controllers.AuthAction.weiboCallback()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
