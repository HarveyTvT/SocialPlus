# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                      controllers.Application.index()


# Can use optional value(which means the either /get-optional?user=lizhuoli or /get-optional will do

# AOP Test(delegate Action)
GET         /delegate              controllers.Application.delegateCall()

GET         /asyncRequest          controllers.Application.asyncRequest()

GET         /api/weibo/auth        controllers.AuthAction.weiboCallback()

#Account management
POST        /login                 controllers.UserAction.login()

POST        /newUser               controllers.UserAction.newUser()

GET           /valid                 controllers.UserAction.processValidation(email,validCode)

POST        /sendMail/:email        controllers.UserAction.sendValidationMail(email)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)
